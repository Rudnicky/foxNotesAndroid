<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arakjel.foxsnotes">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk android:minSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.arakjel.foxsnotes.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.arakjel.foxsnotes.activities.ReadActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.arakjel.foxsnotes.activities.WriteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.arakjel.foxsnotes.activities.AboutActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>